<article id="<%- if @document.isGroup then @document.id else @document.basename %>" class="quadrant-article">
  <h3 class="label article-title <%= if !@document.content then "muted" %> ">
    <%- @document.title %>
  </h3>
  <div class="article-content">
    <%- @document.content %>
  </div>
</article>